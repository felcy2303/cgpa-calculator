def calsem8():
    grade = input("enter Capstone Project: credit 10")
    a = credit4(grade)  
    grade = input("enter Internship: credit 4")
    b = credit4(grade)
    grade = input("enter Free elective 3: credit 3")
    c = credit3(grade)

    print("gpa of sem 8")
    cre = 10 + 4 + 3
    sub = a + b + c
    gpa8 = sub / cre
    print(gpa8)
    s = input("enter cgpa needed y/n")
    if s == "y":
        a1 = calsem1()
        a2 = calsem2()
        a3 = calsem3()
        a4 = calsem4()
        a5 = calsem5()
        a6 = calsem6()
        a7 = calsem7()
        cgpa = (a1 + a2 + a3 + a4 + a5 + a6 + a7 + gpa8) / 8
    else:
        cgpa = gpa8
    print("cgpa:", cgpa)
    return gpa8

while True:
        print("\nMenu")
        print("1. Calculate GPA for Semester 1")
        print("2. Calculate GPA for Semester 2")
        print("3. Calculate GPA for Semester 3")
        print("4. Calculate GPA for Semester 4")
        print("5. Calculate GPA for Semester 5")
        print("6. Calculate GPA for Semester 6")
        print("7. Calculate GPA for Semester 7")
        print("8. Calculate GPA for Semester 8")
        print("9. Exit")

        choice = input("Enter your choice: ")

        if choice == '1':
            calsem1()
        elif choice == '2':
            calsem2()
        elif choice == '3':
            calsem3()
        elif choice == '4':
            calsem4()
        elif choice == '5':
            calsem5()
        elif choice == '6':
            calsem6()
        elif choice == '7':
            calsem7()
        elif choice == '8':
            calsem8()
        elif choice == '9':
            print("Exiting the program.")
            break
        else:
            print("Invalid choice, please try again.")


def credit1(grade):
    a = 0
    if grade == 'O':
        a = 10 * 1
    elif grade == 'A+':
        a = 9 * 1
    elif grade == 'A':
        a = 8 * 1
    elif grade == 'B+':
        a = 7 * 1
    elif grade == 'B':
        a = 6 * 1
    elif grade == 'C':
        a = 5 * 1
    elif grade=="u":
        a = 0
    return a

